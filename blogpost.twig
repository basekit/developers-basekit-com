{% extends "layout.twig" %}

{% block content %}


<!-- HEADER & NAVIGATION -->

{% include 'includes/header.twig' %}



<!-- SIGNUP / LOGIN OVERLAY -->

{% include 'includes/form-overlay.twig' %}



<!-- MAIN SECTION -->

<div role="main" class="main blog">
	<div class="container">

		<div class="row">
			<div class="twelve columns">
				<ul class="blog-breadcrumb">
                    <li><a href="/blog">Basekit Developers Blog</a></li>
                    <li><a href="{{plugins.blog.pathFormat}}{{plugins.blog.posts[0].slug}}" class="selected">
                        {{ plugins.blog.posts[0].title|raw }}</a></li>
                </ul>
			</div>
		</div>

		<div class="row">
			<div class="blog-main eight columns">
				{{widget('blogpost', 'singleblogpost', {})|raw}}
				{{widget('disqus', 'pagecomments', {})|raw}}
			</div>

			<div class="blog-sidebar four columns">
				{{widget('blogsearch', 'blogsearch', {})|raw}}

				<div class="blog-signup">
					<h3>Ready to get started?</h3>
					<p>Sign up for free and start building your website today.</p>
					<a href="/home#signup" class="button green">Sign up</a>
				</div>

				<div class="twitter-feed">
					<h3>Latest tweets</h3>
					{{widget('twitter', 'twitterfeed', {})|raw}}
				</div>

				<!--
				<div class="blog-useful-links">
				<h3>Useful links</h3>
					<ul>
						<li><a href="#">Link 1</a></li>
						<li><a href="#">Link 2</a></li>
						<li><a href="#">Link 3</a></li>
						<li><a href="#">Link 4</a></li>
					</ul>
				</div>-->
				
			</div>
		</div>

		</div>
	</div>
</div>



<!-- FOOTER -->

{% include 'includes/footer.twig' %}

{% endblock %}
