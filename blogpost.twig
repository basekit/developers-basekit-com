<!-- MAIN SECTION -->

<div role="main" class="main blog">
	<div class="container">

		<div class="row">
			<div class="twelve columns">
				<ul class="blog-breadcrumb">
                    <li><a href="/blog">Basekit Developers Blog</a></li>
                    <li><a href="{{plugins.blog.pathFormat}}{{plugins.blog.posts[0].slug}}" class="selected">
