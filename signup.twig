{% extends "layout.twig" %}

{% block content %}


<!-- HEADER -->

{% include 'includes/header.twig' %}



<!-- MAIN SECTION -->

<div role="main" class="main">

	<section class="signup-form">
		<div class="container">

			<div class="row">

				<div class="twelve columns text-center">

					<div id="form-error" class="alert hidden" role="alert">
						<strong>Oh dear!</strong> Does this account already exist?
					</div>

					<form role="form" id="register_form" action="http://dev.bkhub.co.uk/register" method="POST">

						{{widget('content', 'signup-heading', {"content":'<h2>Sign up, its free</h2><h4>Create your website today.</h4>'})|raw}}

						<input type="hidden" id="themeRef" name="themeRef" value="">

						<div class="form-group">
							<input type="email" class="form-control" id="email" placeholder="Enter your email" name="email">
						</div>

						<div class="form-group">
							<input type="password" class="form-control" id="password" placeholder="Create a password" name="password">
						</div>

						<button id="register-button" type="submit" class="button green">Ð¡ontinue</button>

					</form>

				</div>
			</div>

			<div class="row">
				<div class="twelve colums">

					<div class="terms text-center">
						<p>By continuing you're agreeing to our <a href="http://developers.basekit.com/terms-and-conditions">Terms and Conditions</a></p>
					</div>

				</div>
			</div>

			</div>
		</div>
	</section>

</div>



<!-- FOOTER -->

{% include 'includes/footer.twig' %}

{% endblock %}


{% block scripts %}

	<!-- FORM VALIDATION -->
	<script src="{{asset('js/jquery.validate.min.js')}}"></script>

	<!-- SIGN UP -->
	<script src="{{asset('js/signup.js')}}"></script>

	<script>
		var QueryString = function () {
		  // This function is anonymous, is executed immediately and 
		  // the return value is assigned to QueryString!
		  var query_string = {};
		  var query = window.location.search.substring(1);
		  var vars = query.split("&");
		  for (var i=0;i<vars.length;i++) {
		    var pair = vars[i].split("=");
		        // If first entry with this name
		    if (typeof query_string[pair[0]] === "undefined") {
		      query_string[pair[0]] = pair[1];
		        // If second entry with this name
		    } else if (typeof query_string[pair[0]] === "string") {
		      var arr = [ query_string[pair[0]], pair[1] ];
		      query_string[pair[0]] = arr;
		        // If third or later entry with this name
		    } else {
		      query_string[pair[0]].push(pair[1]);
		    }
		  } 
		    return query_string;
		} ();

		$('#themeRef').val(QueryString.theme);
	</script>

{% endblock %}
